<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/logo"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:layout_weight="0.32" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/allir_drykkir_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allir Drykkir"
                android:onClick="onAllDrinksClick"/>

            <Button
                android:id="@+id/leita_eftir_hraefni_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leita eftir hráefni"
                android:onClick="onSearchClick"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/barinn_minn_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barinn minn"
                android:onClick="onMyBarClick"/>
            <Button
                android:id="@+id/komdu_mer_a_ovart_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Komdu mér á óvart"
                android:onClick="onRandomClick"/>

        </TableRow>

    </TableLayout>

</LinearLayout>
